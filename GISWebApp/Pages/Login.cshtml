@page
@model WebApplication.Pages.LoginModel

@{
    ViewData["Title"] = "登录";
}

<h2>Login</h2>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserInfo.UserName" class="control-label"></label>
                <input asp-for="UserInfo.UserName" class="form-control" />
                <span asp-validation-for="UserInfo.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserInfo.Password" class="control-label"></label>
                <input asp-for="UserInfo.Password" class="form-control" />
                <span asp-validation-for="UserInfo.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
